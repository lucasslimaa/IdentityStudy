@model ErrorViewModel
@{

    ViewData["Title"] = Model == null ? "An error has occured" : Model.Title;
}

@{
    if (Model == null)
    {
        <div>
            <h2>Oooops! An error has occured</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>
    }
}